<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expense_list_elem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_exprense_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_parking"
               android:layout_marginTop="10dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
            <TextView
                android:id="@+id/list_expense_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Typ wydatku"
                android:textSize="17dp"/>
                <TextView
                    android:id="@+id/list_expense_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Kwota:"
                android:textSize="17dp"/>
                <TextView
                    android:id="@+id/list_expense_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Opis wydatku"
                android:textSize="17dp"/>
            </LinearLayout>

                <TextView
                    android:id="@+id/list_expense_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="data"
                    android:textSize="18dp"
                    android:layout_gravity="end"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--android:visibility="gone"-->

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
            <TextView
                android:id="@+id/list_expense_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp"
                android:drawableRight="@drawable/ic_edit"
                android:layout_gravity="end"/>
            <TextView
                android:id="@+id/list_expense_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18dp"
                android:layout_marginLeft="25dp"
                android:drawableRight="@drawable/ic_delete"
                android:layout_gravity="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>